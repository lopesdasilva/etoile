# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Profile.index()
GET		/index						controllers.Application.index()

# Authentication
GET     /login                              controllers.Application.login()
POST    /login                              controllers.Application.authenticate()
GET     /logout                             controllers.Application.logout()
GET		/register							controllers.Register.register2()
POST	/register							controllers.Register.register()



#Static pages
GET		/about						controllers.Application.about()
GET		/contact					controllers.Application.contact()
GET		/curriculum					controllers.Application.curriculum()
GET		/digitalcampus					controllers.Application.digitalcampus()

#Blog
GET		/news							controllers.Application.news()
GET		/news:blog						controllers.Application.blog(blog: Long)
POST	/news:blog/postcomment					controllers.Profile.postcomment(blog: Long)

#Professors
GET		/professors/:professor			controllers.Application.professorprofile(professor: String)

#Admin
GET		/admin							controllers.Administration.index()
GET		/admin/createblog				controllers.Administration.createblog()
POST	/admin/addblog					controllers.Administration.addblog()
GET		/admin/removeblog				controllers.Administration.removeblog(blog: Long)
GET		/admin/removeuser				controllers.Administration.removeuser(email: String)

#Courses
##CHECK THIS ROUTE
GET		/courses						controllers.Application.courses()
GET  	/courses/:course					controllers.Application.course(course: String)
GET	/courses/:course/signup				controllers.Profile.signupcourse(course: String)
GET    /:continent          controllers.Application.continent(continent: String)


#Curriculum Courses
GET /curriculum/category:category					controllers.Application.categoryCourses(category: Long)

#Modules
GET		/courses/:course/:module			controllers.Profile.module(module: String, course: String)
POST 	/courses/:course/:module/addquestion 				controllers.Profile.addquestion(test: Long, module: String, course: String)

#Tests
GET 	/courses/:course/:module/test:test  controllers.Profile.test(test: Long, module: String,course: String)
POST 	/courses/:course/:module/test:test/postquestionanswer		 controllers.Profile.postquestionanswer(course: String, module: String, test: Long, question: Long)
POST 	/courses/:course/:module/test:test/postonechoicequestionanswer		 controllers.Profile.postonechoicequestionanswer(course: String, module: String, test: Long, question: Long)
POST 	/courses/:course/:module/test:test/postmultiplechoicequestionanswer		 controllers.Profile.postmultiplechoicequestionanswer(course: String, module: String, test: Long, question: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
